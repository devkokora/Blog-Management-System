@model HomeViewModels
<div class="container col-6 ">
    <div asp-validation-summary="All"></div>
    <form asp-action="EditForum" method="post" role="form" class="form-control bg-dark text-white border-0">
        <input type="hidden" asp-for="@Model.Forum.UserId" />
        <input type="hidden" asp-for="@Model.Forum.ForumId" />
        <div class="">
            <label asp-for="@Model.Forum.Title" for="exampleFormControlInput1" class="form-label">Title</label>
            <input asp-for="@Model.Forum.Title" type="text" class="form-control bg-while" id="exampleFormControlInput1" placeholder="Title">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Forum.Body" for="exampleFormControlTextarea1" class="form-label"></label>
            <textarea asp-for="@Model.Forum.Body" class="form-control bg-while" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-lg-12  text-center">
                <div class="mb-3 text-center">Categories</div>
                <div class="btn-group" role="group" aria-label="Basic checkbox toggle button">
                    @foreach (CategoryType category in Enum.GetValues(typeof(CategoryType)))
                    {
                        <input type="checkbox" class="btn-check"
                               id="btncheck@(category)"
                               name="Forum.CategoriesId"
                               value="@((int)category)"
                               autocomplete="off"
                               @if (Model.Forum is not null && Model.Forum.CategoriesId is not null) { @(Model.Forum.CategoriesId.Any(ci => ci == (int)category) ? "checked" : "")  }>
                        <label class="btn btn-outline-warning" for="btncheck@(category)">@category.ToString()</label>
                    }
                </div>
            </div>
        </div>
        <div class="justify-content-center text-center">
            <button class="btn btn-warning pt-3 mt-1 mb-2" type="submit"><h5>Edit</h5></button>
        </div>
    </form>
</div>