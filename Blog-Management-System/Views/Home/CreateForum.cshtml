@model Blog_Management_System.ViewModels.HomeViewModels
<div class="container col-6 ">
    <div asp-validation-summary="All"></div>
    <form asp-action="Create" method="post" role="form" class="form-control bg-dark text-white border-0">
        <div class="">
            <label asp-for="@Model.Forum.Title" for="exampleFormControlInput1" class="form-label">Title</label>
            <input asp-for="@Model.Forum.Title" type="text" class="form-control bg-while" id="exampleFormControlInput1" placeholder="Title">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Forum.Body" for="exampleFormControlTextarea1" class="form-label"></label>
            <textarea asp-for="@Model.Forum.Body" class="form-control bg-while" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-lg-12  text-center">
                <div class="mb-3 text-center">Categories</div>
                <div class="btn-group" role="group" aria-label="Basic checkbox toggle button">
                    <input type="checkbox" class="btn-check" id="btncheck3" autocomplete="off">
                    <label class="btn btn-outline-warning" for="btncheck3">Alien</label>

                    <input type="checkbox" class="btn-check" id="btncheck4" autocomplete="off">
                    <label class="btn btn-outline-warning" for="btncheck4">UFO</label>

                    <input type="checkbox" class="btn-check" id="btncheck5" autocomplete="off">
                    <label class="btn btn-outline-warning" for="btncheck5">Dog</label>

                    <input type="checkbox" class="btn-check" id="btncheck6" autocomplete="off">
                    <label class="btn btn-outline-warning" for="btncheck6">Cat</label>

                    <input type="checkbox" class="btn-check" id="btncheck7" autocomplete="off">
                    <label class="btn btn-outline-warning" for="btncheck7">Nasa</label>

                    <input type="checkbox" class="btn-check" id="btncheck8" autocomplete="off">
                    <label class="btn btn-outline-warning" for="btncheck8">Zombie</label>
                </div>
            </div>
        </div>
        <div class="justify-content-center text-center">
            <button class="btn btn-success pt-3 mt-1 mb-2" type="submit"><h5>Create</h5></button>
        </div>
    </form>
</div>